<body class="protected">
    <header>
        <a onclick="history.back()" class="voltar-btn" aria-label="Voltar">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 256 256"><path d="M228,128a12,12,0,0,1-12,12H69l51.52,51.51a12,12,0,0,1-17,17l-72-72a12,12,0,0,1,0-17l72-72a12,12,0,0,1,17,17L69,116H216A12,12,0,0,1,228,128Z"></path></svg>
        </a>
        <h1><%= tituloPagina %></h1> [cite: 2]
    </header>
    <main>
        <section>
            <h2>Especialidade</h2>
            <div class="especialidade-grid">
                <% especialidades.forEach(especialidade => { %>
                    <div class="especialidade-option" data-especialidade="<%= especialidade.id %>">
                        <%- especialidade.svg %> <span><%= especialidade.nome %></span> [cite: 3]
                    </div>
                <% }) %>
            </div>
        </section>

        <section>
            <h2>Data e Horário</h2> [cite: 6]
            <div class="form-group">
                <label for="data">Data da consulta</label>
                <input type="date" id="data" required>
            </div>
            <div class="form-group">
                <label>Horários disponíveis</label> [cite: 7]
                <div class="horarios-grid">
                    <% horarios.forEach(horario => { %>
                        <div class="horario-option <%= !horario.disponivel ? 'indisponivel' : '' %>" data-horario="<%= horario.hora %>">
                            <%= horario.hora %>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>

        <section>
            <h2>Informações Adicionais</h2>
            <div class="form-group">
                <label for="observacoes">Observações (opcional)</label>
                <textarea id="observacoes" placeholder="Descreva sintomas, medicamentos em uso ou outras informações relevantes"></textarea>
            </div>
            <div class="alerta-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 256 256"><path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216Zm-8-80V80a8,8,0,0,1,16,0v56a8,8,0,0,1-16,0Zm20,36a12,12,0,1,1-12-12A12,12,0,0,1,140,172Z"></path></svg>
                <div class="alerta-texto">
                    <strong>Importante:</strong> Chegue com 15 minutos de antecedência e traga um documento com foto. Em caso de emergência, procure o pronto-socorro. [cite: 13]
                </div>
            </div>
        </section>

        <section>
            <h2>Resumo do Agendamento</h2>
            <div class="resumo-agendamento">
                <div class="resumo-item">
                    <span class="resumo-label">Hospital:</span> [cite: 14]
                    <span class="resumo-valor"><%= hospital.nome %></span>
                </div>
                <div class="resumo-item">
                    <span class="resumo-label">Especialidade:</span>
                    <span class="resumo-valor" id="resumo-especialidade">Selecione uma especialidade</span> [cite: 15]
                </div>
                <div class="resumo-item">
                    <span class="resumo-label">Data:</span>
                    <span class="resumo-valor" id="resumo-data">Selecione uma data</span>
                </div>
                <div class="resumo-item">
                    <span class="resumo-label">Horário:</span>
                    <span class="resumo-valor" id="resumo-horario">Selecione um horário</span>
                </div>
            </div>
            
            <button type="button" class="btn-agendar" id="btn-confirmar" disabled> [cite: 17]
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#ffffff" viewBox="0 0 256 256"><path d="M173.66,98.34a8,8,0,0,1,0,11.32l-56,56a8,8,0,0,1-11.32,0l-24-24a8,8,0,0,1,11.32-11.32L112,148.69l50.34-50.35A8,8,0,0,1,173.66,98.34ZM232,128A104,104,0,1,1,128,24,104.11,104.11,0,0,1,232,128Zm-16,0a88,88,0,1,0-88,88A88.1,88.1,0,0,0,216,128Z"></path></svg>
                Confirmar Agendamento
            </button>
        </section>
    </main>
