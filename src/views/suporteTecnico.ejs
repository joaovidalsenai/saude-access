<!DOCTYPE html>
<html lang="pt-BR" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= tituloPagina %></title>
    <link rel="stylesheet" href="/css/suporteTecnico.css">
</head>
<body>
    <header>
        <h1><%= tituloHeader %></h1>
    </header>

    <main>
        <!-- Status -->
        <section>
            <h2>Status do Sistema</h2>
            <div class="contact-item">
                <div class="contact-icon">
                    <%- iconeStatus %>
                </div>
                <div>
                    <strong><%= statusTitulo %></strong><br>
                    <span class="status-indicator <%= statusClass %>"></span>
                    <%= statusMensagem %>
                </div>
            </div>
        </section>

        <!-- FAQ dinâmico -->
        <section>
            <h2>Perguntas Frequentes</h2>
            <% faqs.forEach(faq => { %>
                <div class="faq-item">
                    <div class="faq-question" onclick="toggleFaq(this)">
                        <h3><%= faq.pergunta %></h3>
                        <%- iconeFaq %>
                    </div>
                    <div class="faq-answer">
                        <p><%= faq.resposta %></p>
                    </div>
                </div>
            <% }) %>
        </section>

        <!-- Contato -->
        <section>
            <h2>Entre em Contato</h2>
            <div class="contact-info">
                <% contatos.forEach(c => { %>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <%- c.icone %>
                        </div>
                        <div>
                            <strong><%= c.titulo %></strong><br>
                            <%= c.valor %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>

        <!-- Formulário -->
        <section>
            <h2>Envie sua Mensagem</h2>
            <form class="contact-form" onsubmit="enviarMensagem(event)">
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" name="nome" required placeholder="Digite seu nome completo">
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required placeholder="Digite seu endereço de E-mail">
                </div>

                <div class="form-group">
                    <label for="assunto">Assunto</label>
                    <select id="assunto" name="assunto" required>
                        <option value="">Selecione um assunto</option>
                        <% assuntos.forEach(a => { %>
                            <option value="<%= a.value %>"><%= a.text %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="mensagem">Mensagem</label>
                    <textarea id="mensagem" name="mensagem" placeholder="Descreva detalhadamente sua questão ou sugestão..." required></textarea>
                </div>

                <button type="submit" class="submit-btn">Enviar Mensagem</button>
            </form>
        </section>

        <!-- Recursos -->
        <section>
            <h2>Recursos Adicionais</h2>
            <div class="contact-info">
                <% recursos.forEach(r => { %>
                    <div class="contact-item" onclick="window.open('<%= r.link %>', '_blank')">
                        <div class="contact-icon">
                            <%- r.icone %>
                        </div>
                        <div>
                            <strong><%= r.titulo %></strong><br>
                            <%= r.descricao %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <!-- Navegação -->
    <nav>
        <ul class="nav-list">
            <% navItens.forEach(n => { %>
                <li class="nav-item">
                    <a href="<%= n.href %>">
                        <button type="button" class="nav-button" aria-label="<%= n.label %>">
                            <%- n.icone %>
                        </button>
                    </a>
                </li>
            <% }) %>
        </ul>
    </nav>

    <script src="/js/global.js"></script>
    <script src="/js/scriptSupTecnico.js"></script>
</body>
</html>
